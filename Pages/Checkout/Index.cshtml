@page
@model RetailMonolith.Pages.Checkout.IndexModel
@{
    ViewData["Title"] = "Checkout";
}

<div class="container mt-4">
    <h2 class="mb-4">
        <i class="bi bi-credit-card"></i> Checkout
    </h2>

    @if (!Model.Lines.Any())
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle"></i> Your cart is empty. <a href="/Products" class="alert-link">Continue shopping</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Item</th>
                                    <th style="width: 100px;" class="text-center">Quantity</th>
                                    <th style="width: 120px;" class="text-end">Unit Price</th>
                                    <th style="width: 120px;" class="text-end">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var line in Model.Lines)
                                {
                                    <tr>
                                        <td><strong>@line.Name</strong></td>
                                        <td class="text-center">@line.Qty</td>
                                        <td class="text-end">@line.Price.ToString("C")</td>
                                        <td class="text-end"><strong>@((line.Price * line.Qty).ToString("C"))</strong></td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-light">
                                    <td colspan="3" class="text-end"><h5 class="mb-0">Total:</h5></td>
                                    <td class="text-end"><h4 class="mb-0 text-success">@Model.Total.ToString("C")</h4></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Payment Details</h5>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="mb-3">
                                <label for="paymentToken" class="form-label">Payment Token</label>
                                <input asp-for="PaymentToken" class="form-control" placeholder="tok_test" />
                                <div class="form-text">
                                    <i class="bi bi-info-circle"></i> This is a mock payment for testing
                                </div>
                            </div>

                            <div class="d-grid gap-2 mt-4">
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="bi bi-check-circle"></i> Complete Order
                                </button>
                                <a href="/Cart" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Back to Cart
                                </a>
                            </div>
                        </form>
                    </div>

                    <div class="card-footer bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <span>Order Total:</span>
                            <strong class="text-success fs-5">@Model.Total.ToString("C")</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .table th, .table td {
        vertical-align: middle;
    }
    
    .text-end {
        text-align: right !important;
    }
    
    .text-center {
        text-align: center !important;
    }
</style>