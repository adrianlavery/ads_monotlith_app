@page
@model RetailMonolith.Pages.Orders.IndexModel
@{
    ViewData["Title"] = "Orders";
}

<div class="container mt-4">
    <h2 class="mb-4">
        <i class="bi bi-receipt"></i> Order History
    </h2>

    @if (!Model.Orders.Any())
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i> No orders have been placed yet. <a href="/Products" class="alert-link">Start shopping</a>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Order #</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th style="width: 120px;" class="text-end">Total</th>
                            <th style="width: 100px;" class="text-center">Items</th>
                            <th style="width: 150px;" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.Orders)
                        {
                            <tr>
                                <td><strong>#@order.Id</strong></td>
                                <td>@order.CreatedUtc.ToLocalTime().ToString("MMM dd, yyyy")</td>
                                <td><span class="badge bg-success">@order.Status</span></td>
                                <td class="text-end"><strong>@(order.Total.ToString("C"))</strong></td>
                                <td class="text-center">@order.Lines.Count</td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-primary" href="/Orders/Details?id=@order.Id">
                                        <i class="bi bi-eye"></i> View Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<style>
    .text-end {
        text-align: right !important;
    }
    
    .text-center {
        text-align: center !important;
    }
</style>